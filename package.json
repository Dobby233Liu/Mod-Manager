{
  "name": "doki-doki-mod-manager",
  "productName": "Doki Doki Mod Manager",
  "description": "Mod Manager for Doki Doki Literature Club",
  "author": "u/zuudo",
  "version": "3.3.0",
  "homepage": "https://doki.space",
  "license": "MIT",
  "main": "lib/main/index.js",
  "repository": "https://github.com/DokiDokiModManager/Mod-Manager",
  "bugs": "zudo@doki.space",
  "scripts": {
    "postinstall": "electron-rebuild",
    "watch-css": "node-sass src/renderer/css --output lib/renderer/css --watch",
    "watch-typescript": "tsc --watch",
    "watch-renderer": "webpack --mode=development --watch",
    "watch": "concurrently \"npm:watch-*\"",
    "build-css": "node-sass src/renderer/css --output lib/renderer/css",
    "build-typescript": "tsc",
    "build-renderer": "webpack --mode=production",
    "build-all": "yarn build-css && yarn build-typescript && yarn build-renderer",
    "start": "yarn build-all && electron . --enable-sandbox",
    "start-dev": "yarn build-all && concurrently -k \"npm:watch\" \"electron --inspect=5858 . --enable-sandbox\"",
    "release": "yarn build-all && electron-builder",
    "test": "yarn build-all && mocha"
  },
  "dependencies": {
    "7zip-bin": "^4.1.0",
    "@fortawesome/fontawesome-free": "^5.9.0",
    "@sentry/electron": "0.17.1",
    "@zudo/unzipper": "^0.0.4",
    "archiver": "^3.0.0",
    "chmodr": "^1.2.0",
    "discord-rich-presence": "^0.0.8",
    "diskusage": "^1.1.1",
    "electron-updater": "^4.0.6",
    "file-url": "^3.0.0",
    "fs-extra": "^8.0.1",
    "fuse.js": "^3.4.5",
    "request": "^2.88.0",
    "semver": "^6.1.1",
    "vue": "^2.6.10",
    "vuex": "^3.1.1"
  },
  "devDependencies": {
    "@sentry/cli": "^1.44.3",
    "concurrently": "^4.1.0",
    "css-loader": "^3.0.0",
    "electron": "^5.0.3",
    "electron-builder": "^20.43.0",
    "electron-rebuild": "^1.8.5",
    "mocha": "^6.1.4",
    "node-sass": "^4.12.0",
    "typescript": "^3.5.1",
    "vue-loader": "^15.7.0",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4"
  },
  "build": {
    "appId": "space.doki.modmanager",
    "artifactName": "ddmm-${version}-${os}-${arch}.${ext}",
    "files": [
      "!**/*.ts",
      "!**/*.map",
      "!**/fontawesome-free/svgs",
      "!**/fontawesome-free/sprites",
      "!**/fontawesome-free/svgs",
      "!**/fontawesome-free/js",
      "!**/fontawesome-free/less",
      "!**/fontawesome-free/scss",
      "!**/vue/",
      "!**/src/renderer/css",
      "!**/src/renderer/js"
    ],
    "protocols": [
      {
        "name": "Doki Doki Mod Manager",
        "schemes": [
          "ddmm"
        ]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "repo": "Mod-Manager",
        "owner": "DokiDokiModManager"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "category": "Game",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "mac": {
      "category": "public.app-category.games",
      "target": [
        "dmg"
      ]
    }
  }
}
