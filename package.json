{
  "name": "doki-doki-mod-manager",
  "productName": "Doki Doki Mod Manager",
  "description": "Mod Manager for Doki Doki Literature Club",
  "author": "u/zuudo",
  "version": "4.0.0",
  "homepage": "https://doki.space",
  "license": "MIT",
  "main": "lib/main/index.js",
  "repository": "https://github.com/DokiDokiModManager/Mod-Manager",
  "bugs": "zudo@doki.space",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "build-typescript": "tsc",
    "start": "yarn build-typescript && electron . --enable-sandbox",
    "start-dev": "yarn build-typescript && electron --inspect=5858 . --enable-sandbox",
    "release": "yarn build-typescript && electron-builder",
    "test": "yarn build-typescript && mocha"
  },
  "dependencies": {
    "7zip-bin": "^5.0.3",
    "@fortawesome/fontawesome-free": "^5.12.0",
    "@sentry/electron": "1.3.0",
    "archiver": "^4.0.1",
    "chmodr": "^1.2.0",
    "datauri": "^2.0.0",
    "discord-rich-presence": "^0.0.8",
    "diskusage": "^1.1.3",
    "electron-updater": "^4.2.0",
    "fs-extra": "^9.0.0",
    "fuse.js": "^5.1.0",
    "request": "^2.88.0",
    "semver": "^7.1.1",
    "vue": "^2.6.11",
    "vuex": "^3.1.2",
    "yauzl": "latest"
  },
  "devDependencies": {
    "@sentry/cli": "^1.49.0",
    "@types/node": "12.12.36",
    "electron": "^9.0.0-beta.17",
    "electron-builder": "^22.2.0",
    "mocha": "^7.0.0",
    "typescript": "^3.7.5"
  },
  "build": {
    "appId": "space.doki.modmanager",
    "artifactName": "ddmm-${version}-${os}-${arch}.${ext}",
    "files": [
      "!**/*.ts",
      "!**/*.map",
      "!**/fontawesome-free/svgs",
      "!**/fontawesome-free/sprites",
      "!**/fontawesome-free/svgs",
      "!**/fontawesome-free/js",
      "!**/fontawesome-free/less",
      "!**/fontawesome-free/scss",
      "!**/vue/",
      "!**/src/renderer/css",
      "!**/src/renderer/js"
    ],
    "protocols": [
      {
        "name": "Doki Doki Mod Manager",
        "schemes": [
          "ddmm"
        ]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "repo": "Mod-Manager",
        "owner": "DokiDokiModManager"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "category": "Game",
      "maintainer": "zudo@doki.space",
      "synopsis": "Doki Doki Mod Manager",
      "target": [
        "AppImage",
        "snap"
      ]
    },
    "mac": {
      "category": "public.app-category.games",
      "target": [
        "dmg"
      ]
    }
  }
}
