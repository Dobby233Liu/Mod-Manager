{
  "name": "doki-doki-mod-manager",
  "productName": "Doki Doki Mod Manager",
  "description": "Mod Manager for Doki Doki Literature Club",
  "author": "u/zuudo",
  "version": "3.0.1-beta",
  "homepage": "https://doki.space",
  "license": "MIT",
  "main": "lib/main/index.js",
  "scripts": {
    "start": "tsc && electron . --enable-sandbox",
    "start-dev": "tsc && electron --inspect=5858 . --enable-sandbox",
    "release": "tsc && electron-builder",
    "test": "tsc && mocha"
  },
  "dependencies": {
    "7zip-bin": "^4.1.0",
    "@fortawesome/fontawesome-free": "^5.5.0",
    "@sentry/electron": "0.14.0",
    "@zudo/unzipper": "^0.0.4",
    "chmodr": "^1.2.0",
    "discord-rich-presence": "^0.0.7",
    "electron-updater": "^4.0.7",
    "file-url": "^2.0.2",
    "fs-extra": "^7.0.1",
    "fuse.js": "^3.3.0",
    "request": "^2.88.0",
    "vue": "^2.5.17"
  },
  "devDependencies": {
    "@sentry/cli": "^1.36.4",
    "electron": "^4.0.0",
    "electron-builder": "^20.36.2",
    "mocha": "^5.2.0",
    "typescript": "^3.2.2"
  },
  "build": {
    "appId": "space.doki.modmanager",
    "artifactName": "ddmm-${version}-${os}-${arch}.${ext}",
    "files": [
      "!**/*.ts",
      "!**/*.map",
      "!**/fontawesome-free/svgs",
      "!**/fontawesome-free/sprites",
      "!**/fontawesome-free/svgs",
      "!**/fontawesome-free/js",
      "!**/fontawesome-free/less",
      "!**/fontawesome-free/scss",
      "!**/vue/src"
    ],
    "generateUpdatesFilesForAllChannels": true,
    "publish": [
      {
        "provider": "github",
        "repo": "Mod-Manager",
        "owner": "DokiDokiModManager"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "oneClick": false,
          "perMachine": false,
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "category": "Game",
      "icon": "build/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "mac": {
      "category": "public.app-category.games",
      "target": [
        "dmg"
      ]
    }
  }
}
