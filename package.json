{
  "name": "doki-doki-mod-manager",
  "productName": "Doki Doki Mod Manager!",
  "description": "Mod Manager for Doki Doki Literature Club!",
  "author": "u/zuudo",
  "version": "3.0.0",
  "homepage": "https://doki.space",
  "license": "MIT",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron . --enable-sandbox",
    "start-dev": "electron --inspect=5858 . --enable-sandbox",
    "release": "electron-builder"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.5.0",
    "vue": "^2.5.17",
    "chmodr": "latest",
    "@zudo/unzipper": "latest"
  },
  "devDependencies": {
    "electron": "^3.0.10"
  },
  "build": {
    "appId": "space.doki.modmanager",
    "artifactName": "ddmm-${version}-${os}-${arch}.${ext}",
    "publish": [
      {
        "provider": "github",
        "repo": "Mod-Manager",
        "owner": "DokiDokiModManager"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "category": "Game",
      "icon": "build/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "mac": {
      "category": "public.app-category.games",
      "target": [
        "dmg"
      ]
    }
  }
}
